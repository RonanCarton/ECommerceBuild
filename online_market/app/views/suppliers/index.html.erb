<h3>Meet Your Growers and Makers</h3>

<% form_tag suppliers_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search_query, params[:search_query] %>
      <%= submit_tag "Search For Growers and Makers", :name => nil %>
    </p>
<% end %>


<% @suppliers.each do |supplier| %>
  <ol class="unstyled">
    <li><h4><%= supplier.name %></h4></li>
    <li><%= supplier.description %></li>
  <li><%= image_tag(supplier.image_url) unless supplier.image_url.nil? %></li>
   <% if current_user != nil and current_user.admin? %>
    <li><%= link_to 'Show', supplier %></li>
    <li><%= link_to 'Edit', edit_supplier_path(supplier) %></li>
    <li><%= link_to 'Destroy', supplier, :confirm => 'Are you sure?', :method => :delete %></li>
   <% end %>


<% end %>
</ol>



<br />
<% if current_user != nil and current_user.admin? %>
<%= link_to 'New Supplier', new_supplier_path %>
<% end %>
